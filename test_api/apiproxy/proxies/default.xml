<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <RouteRule name="RedirectToLogin">
        <Condition>(proxy.pathsuffix MatchesPath "/oauth/authorize")</Condition>
        <URL>https://login.oregonstate.edu/cas-dev/login?service=https://osu-test.apigee.net/v1/site-directory</URL>
    </RouteRule>
    <Description/>
    <PreFlow name="PreFlow">
        <Request>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="RedirectToLogin">
            <Description/>
            <Request>
                <Step>
                    <Name>verify-api-key</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/oauth/authorize")</Condition>
        </Flow>
        <Flow name="GetAuthCode">
            <Description/>
            <Request>
                <Step>
                    <Name>GenerateAuthorizationCode</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/oauth/authorizationcode")</Condition>
        </Flow>
        <Flow name="GetAccessToken">
            <Description/>
            <Request>
                <Step>
                    <Name>GetAccessToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/oauth/accesstoken")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/site-directory</BasePath>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>