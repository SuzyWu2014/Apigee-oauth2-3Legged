<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <Flows>
        <Flow name="RedirectToLogin">
            <Description/>
            <Request>
                <Step>
                    <Name>redirect-to-login</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>redirect-to-login</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/authorize")</Condition>
        </Flow>
        <Flow name="GenerateAuthCode">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>Generate-Authorization-Code</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/auth-code")</Condition>
        </Flow>
        <Flow name="GenerateToken">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>Generate-Access-Token</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/oauth2</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>