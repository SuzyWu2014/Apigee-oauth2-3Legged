<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <RouteRule name="RedirectToLogin">
        <Condition>(proxy.pathsuffix MatchesPath "/authorize")</Condition>
        <URL>https://login.oregonstate.edu/cas-dev/login?service=https%3A%2F%2Fosu-test.apigee.net%2Fv1%2Foauth2%2Fauth-code%3Fresponse_type%3Dcode%26client_id%3DBAGn4qKd6dggoWPqACfVC3JM0vie0uDk%26redirect_url%3Dhttps%3A%2F%2Fosu-test.apigee.net%2Fv1%2Fsite-directory</URL>
    </RouteRule>
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="RedirectToLogin">
            <Description/>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/authorize")</Condition>
        </Flow>
        <Flow name="GenerateAuthCode">
            <Description/>
            <Request>
                <Step>
                    <Name>Generate-Authorization-Code</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/auth-code")</Condition>
        </Flow>
        <Flow name="GenerateToken">
            <Description/>
            <Request>
                <Step>
                    <Name>Generate-Access-Token</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/oauth2</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>